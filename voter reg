        <script>
            function validate()
            {
               name=document.f.n.value;
               age=document.f.a.value;
               k=document.f.aadhar.value;
              if(name=="")
              {
                alert("name should be filled");
              }
               if(name.length>30)
              {
                alert("length of nme shouldnt be greater than 30");
              }
              if(age=="")
              {
                alert("enteer age");
              }
               if(age!="" &&age<18)
              {
                alert("age must be greater than 18")
              }
               if(k=="")
              {
                alert("aadhar number is empty");
              }
              if((k!="")&&(k.length<12||k.length>12))
              {
                alert("enter aadhar number properly");
              }
              
            }
        </script>
        
